<h1>List of events </h1>

<div> 
<%=link_to(image_tag("icons/add.png"), new_event_path) %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Day & Time</th>
      <th>Location</th>
      <th>Description</th>
      <th>Event type</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
 <tr>
      <td><%= event.name %></td>
      <td><%= event.day %> </td>
      <td><%= event.location %></td>
      <td><%= event.description %></td>
      <td><%= event.event_type %></td>
      <td> <%= link_to image_tag('icons/edit.png'), edit_event_path(event) %></td>
      <td> <%= link_to image_tag('icons/show.png'), event_path(event) %></td>
      <td> <%= link_to "Delete", event_path(event),  method: :delete, notice: { confirm: 'Are you sure?'}  %></td>
    </tr>
 <% end %>
  </tbody>
</table>

